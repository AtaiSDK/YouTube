<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="16dp">
    
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/corner_image"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/material_dynamic_neutral_variant40"
        />
    

    <View
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/transparent_shape"
        />

    <TextView
        android:layout_width="40sp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginTop="73dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="playlist"

        />
    
    <TextView
        android:id="@+id/tv_text1"
        android:textSize="16dp"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:textStyle="bold"
        android:text="Meet Nutritional Needs"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        />
    
    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="84dp"
        android:layout_height="16dp"
        android:text="32 video series"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintTop_toBottomOf="@id/tv_text1"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        />
    
    
</androidx.constraintlayout.widget.ConstraintLayout>